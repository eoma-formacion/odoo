<odoo>
    <data>
        <record id="view_event_form_rooms" model="ir.ui.view">
            <field name="name">view.event.form.rooms</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form" />
            <field name="arch" type="xml">
                <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button name="action_view_room_bookings" type="object" class="oe_stat_button" icon="fa-calendar">
                        <field name="room_booking_count" widget="statinfo" string="Calendario"/>
                    </button>
                </xpath>
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="instructor_ids" widget="many2many_tags" />
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Salas" name="rooms">
                        <field 
                            name="room_booking_ids"
                            context="{
                                'default_name': name
                            }"
                        >
                            <list>
                                <field name="room_id"/>
                                <field name="start_datetime"/>
                                <field name="stop_datetime"/>
                                <button name="action_view_room_bookings" type="object" string="Ver Reservas" class="oe_highlight"/>
                            </list>
                            <form>
                                <div class="oe_title">
                                    <label for="name" string="Nombre de la Reserva"/>
                                    <h1><field class="text-break" options="{'line_breaks': False}" widget="text" name="name" placeholder="e.g. Conferencia"/></h1>
                                </div>
                                <group>
                                    <group>
                                        <field name="room_id" />
                                    </group>
                                    <group>
                                        <field name="organizer_id" />
                                    </group>
                                </group>
                                <group>
                                    <group>
                                        <field name="start_datetime" string="Fecha" widget="daterange" options="{'end_date_field': 'stop_datetime'}"/>
                                        <field name="stop_datetime" invisible="1"/>
                                    </group>
                                    <!--
                                    <group>
                                        <button name="action_view_room_bookings" type="object" string="Ver Reservas" class="oe_highlight"/>
                                    </group>
                                    -->
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>